{% extends 'base.html.twig' %}

{% block title %}Import Single Profile{% endblock %}

{% block body %}
    <section class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="mb-4">Importer un profil</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>Ses coordonn√©es</legend>
                    {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.site, {'attr': {'class': 'form-control'}}) }}
                </fieldset>
                <fieldset class="mb-3">
                    <legend>Son mail de connexion</legend>
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </fieldset>

                <button type="submit" class="btn btn-primary">Enregistrer le profil</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
