{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>S'enregistrer</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <fieldset class="mb-3">
            <legend>Mes coordonn√©es</legend>
            {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.site, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.photo) }}
        </fieldset>
        <fieldset class="mb-3">
            <legend>Mes Identifiants de connexion</legend>
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.RGPD, {'attr': {'class': 'form-check-input'}}) }}
        </fieldset>

        <button type="submit" class="btn btn-primary">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
