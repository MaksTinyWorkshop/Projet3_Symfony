{% extends 'base.html.twig' %}

{% block title %}Mes Groupes Privés{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Mes Groupes Privés</h1>
        <div class="text-end mb-3">
            <a href="{{ path('groupe_prive_new') }}" class="btn btn-primary">Créer un nouveau groupe</a>
        </div>
        <div class="list-group">
            {% for groupe in groupes %}
                <a href="{{ path('groupe_prive_show', {'id': groupe.id}) }}" class="list-group-item list-group-item-action">
                    {{ groupe.nom }}
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
