{# templates/lieu/add.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Ajouter un lieu{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Ajouter un lieu</h1>

        {# Afficher les messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {# Formulaire d'ajout de lieu #}
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.rue) }}
                {{ form_widget(form.rue, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.rue) }}
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                {{ form_label(form.latitude) }}
                {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.latitude) }}
                </div>
            </div>
            <div class="form-group col-md-4">
                {{ form_label(form.longitude) }}
                {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.longitude) }}
                </div>
            </div>
            <div class="form-group col-md-4">
                {{ form_label(form.codePostal) }}
                {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.codePostal) }}
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_label(form.ville) }}
                {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.ville) }}
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Ajouter le lieu</button>
        {{ form_end(form) }}
    </div>
{% endblock %}